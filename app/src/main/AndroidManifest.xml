<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nastia.cf">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/rsz_logo_big"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".signUpActivity" />
        <activity android:name=".fev1_editActivity" />
        <activity android:name=".signUp_detailsActivity" />
        <activity android:name=".menuActivity" />
        <activity android:name=".questionsActivity" />
        <activity android:name=".breathingActivity" />
        <activity android:name=".MedicinesActivity" />
        <activity android:name=".sportWheel" />
        <activity
            android:name=".set_medicine"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".NutritionActivity" />
        <activity android:name=".addNutrition" />
        <activity android:name=".ContactsActivity" />
        <activity android:name=".welcomeActivity" />
        <activity android:name=".FeedActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".stepCounter"></activity>
        <service android:name=".StepsCounterService"/>
    </application>

</manifest>