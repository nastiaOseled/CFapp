<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsz_background_dark_blue"
    tools:context=".signUpActivity">

    <Button
        android:id="@+id/cntBtn"
        android:layout_width="156dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:background="@drawable/round_pink_button"
        android:text="@string/continue_btn"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="continueBtnListener"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="172dp"
        android:layout_height="132dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        app:srcCompat="@drawable/logo_big" />

    <TextView
        android:id="@+id/signinBtn"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignEnd="@+id/signin_email"

        android:layout_alignTop="@+id/signupBtn"
        android:height="19dp"
        android:background="@null"
        android:clickable="true"
        android:onClick="onClickSignIn"
        android:text="@string/sign_in"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="163dp"
        android:layout_alignRight="@+id/signin_email" />

    <TextView
        android:id="@+id/signupBtn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/termsCheckBox"
        android:layout_marginTop="178dp"
        android:background="@null"
        android:clickable="true"
        android:onClick="onClickSignUp"
        android:text="@string/sign_up"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="163dp"
        android:layout_alignLeft="@+id/termsCheckBox" />

    <View
        android:id="@+id/signinLine"
        android:layout_width="88dp"
        android:layout_height="3dp"
        android:layout_alignStart="@+id/signinBtn"
        android:layout_below="@+id/signinBtn"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="-6dp"
        android:background="@android:color/white"
        android:layout_alignLeft="@+id/signinBtn"
        android:layout_marginLeft="-8dp" />

    <View
        android:id="@+id/signupLine"
        android:layout_width="80dp"
        android:layout_height="3dp"

        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/signinLine"
        android:layout_marginStart="91dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="91dp" />

    <EditText
        android:id="@+id/signin_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:cursorVisible="false"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="מייל"
        android:inputType="textEmailAddress"
        android:textColorLink="@android:color/background_light" />

    <EditText
        android:id="@+id/signin_psw"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="230dp"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="סיסמא"
        android:inputType="textPassword"
        android:textColorLink="@android:color/background_light" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:cursorVisible="false"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="מייל"
        android:inputType="textEmailAddress"
        android:textColorLink="@android:color/background_light" />

    <EditText
        android:id="@+id/signup_psw"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/signin_psw"
        android:layout_centerHorizontal="true"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="סיסמא"
        android:inputType="textPassword"
        android:textColorLink="@android:color/background_light" />

    <EditText
        android:id="@+id/signup_psw2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="149dp"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="וידוא סיסמא"
        android:inputType="textPassword"
        android:textColorLink="@android:color/background_light" />

    <CheckBox
        android:id="@+id/termsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="97dp"
        android:text="קראתי את התקנון ותנאי השירות"
        android:layoutDirection="rtl"/>

</RelativeLayout>